semver= require 'semver'

build_date= ->
  exec("date +%y%m%d%H%M", silent:yes).output.trim()

package_version= ->
  require('../../package.json').version

git_commit_count= ->
  exec("git log --oneline | wc -l", silent:yes).output.trim()

new_version= ->
  ver= package_version()
  [major, minor, patch]= ver.split('.')
  patch = git_commit_count()
  [major, minor, patch].join('.')

update_json= (path, callback)->
  data= require "../.#{path}"
  callback data
  output= JSON.stringify(data, null, 2)
  output.to "#{path}"
  echo "  updated #{path}"


task 'ver', 'Prints current app version', ->
  echo package_version()


option '-f', '--force', "(ver) Force updating for version files"
task 'ver:update', 'Updates all the files that contain version info', (options)->
  ver= package_version()
  new_ver= new_version()
  
  if new_ver isnt ver or options.force
    echo "v", new_ver
    
    update_json './package.json', (pkg)->
      pkg.version= new_ver
    
    update_json './bower.json', (bwr)->
      bwr.version= new_ver

    """
# Class: Version
#   (This is generated by the 'ver:update' cake task.)
#
# Usage:
#   (start code)
#     var version= require('models/version')
#     #=> #{ JSON.stringify(new_ver, null, 2) }
#   (end)
module.exports = #{ JSON.stringify(new_ver, null, 2) }""".to 'app/models/version.coffee'
    echo "  updated ./app/models/version.coffee"
